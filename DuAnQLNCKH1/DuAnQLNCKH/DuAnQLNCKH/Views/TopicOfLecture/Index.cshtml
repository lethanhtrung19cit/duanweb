
@{
    ViewBag.Title = "Danh sách đề tài";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int stt = 1;
    int sttsv = 1;
    var listTopicOfStudent = (List<DuAnQLNCKH.Models.TopicOfStudentView>)ViewBag.listTopicOfStudent;
    var topicofLecture = (List<DuAnQLNCKH.Models.TopicOfLectureView>)ViewBag.TopicOfLecture;
}
 
<div style="margin:20px 0 20px 0" class="page-title">
    <img src="~/images/todo-list-1725465-1465626.png" width="50px" height="50px" />
    <strong style="font-size:25px">Danh sách đề tài đang thực hiện</strong>
</div>
<hr style="width:1200px" />
<div class="tabs">
    <div class="tab-nav-wrapper">
        <ul>
            <li class="active"><a href="#tab1">Đề tài giảng viên</a></li>
            <li><a href="#tab2">Đề tài sinh viên</a></li>

        </ul>
    </div>
    <div class="tab-content-wrapper" style="width: 1200px">
        <div id="tab1" class="tab-content" style="display:none;">
            <table class="table1">
                <tr class="headerrow">
                   <th>
                       STT
                   </th>
                    <th>
                        Giảng viên
                    </th>
                    <th>Khoa</th>
                    <th style="width:100px">
                        Tên đề tài
                    </th>
                    
                    <th>
                        Loại đề tài
                    </th>
                    <th>
                        Bắt đầu
                    </th>
                    <th>
                        Thời gian
                    </th>
                    <th>
                        Kết thúc
                    </th>
                    <th>
                        Kinh phí
                    </th>
                     
                    <th>
                        Trạng thái
                    </th>
                    <th>
                        Thời gian gia hạn thêm
                    </th>
                    
                </tr>
               
                @foreach (var deTaiGV in topicofLecture)
                {

                    <tr>
                         <td>@stt</td>
                        @{
                            stt++;
                        }
                        <td>

                            @deTaiGV.information.NameLe
 
                        </td>
                        <td>@deTaiGV.faculty.Name</td>
                        <td style="width:150px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">

                            @deTaiGV.topicOfLecture.Name

                        </td>
                        
                        <td width="150px">

                            @deTaiGV.pointTable.NameP


                        </td>
                        <td>
                            @deTaiGV.topicOfLecture.DateSt.ToString("dd/MM/yyyy")

                        </td>
                        <td>

                            @deTaiGV.topicOfLecture.Times tháng

                        </td>
                        <td>
                            @{ 
 
                                var dateEnd =  deTaiGV.topicOfLecture.DateSt.AddMonths(deTaiGV.topicOfLecture.Times).ToString("d");
                                <p>@dateEnd</p>
                            }
                        </td>
                        <td>

                            @deTaiGV.topicOfLecture.Expense VNĐ

                        </td>
                        
                        <td>

                            @deTaiGV.topicOfLecture.Progress

                        </td>
                        <td width="150px">
                            @{string a = null; }
                            @if (deTaiGV.extension.Status.Equals("Đã duyệt"))
                            {
                                a = deTaiGV.extension.Times.ToString("dd/MM/yyyy");
                            }
                            else
                            {
                                a = "không có".ToString();

                            }
                            @a
                        </td>
                      

                    </tr>

                }



            </table>
        </div>
        <div id="tab2" class="tab-content" style="display:none;">
            <table class="table1">
                <tr class="headerrow">    
                     <th>
                         STT
                     </th>
                     <th>
                         Sinh viên
                     </th>
                    <th>
                        Khoa
                    </th>
                    <th>
                        Tên đề tài
                    </th>
                    
                     
                    <th>
                        Loại đề tài
                    </th>
                    <th>
                        Bắt đầu
                    </th>
                    <th>
                        Thời gian
                    </th>
                    <th>Kết thúc</th>
                    <th>
                        Kinh phí
                    </th>
                     
                    <th>
                        Trạng thái
                    </th>

                </tr>

                @foreach (var topicOfStudent in listTopicOfStudent)
                {

                    <tr>
                         <td>@sttsv</td>
                        @{
                            sttsv++;
                        } 
                        <td>

                            @topicOfStudent.topicOfStudent.NameSt


                        </td>                       
                        <td>@topicOfStudent.faculty.Name</td>

                        <td style="width:150px">

                            @topicOfStudent.topicOfStudent.Name

                        </td>
                       
                        <td>

                            @topicOfStudent.pointTable.NameP

                        </td>
                        <td>

                            @topicOfStudent.topicOfStudent.DateSt.ToString("dd/MM/yyyy")

                        </td>
                        <td>

                            @topicOfStudent.topicOfStudent.Times tháng

                        </td>
                        <td>
                            @{ 
     
                                var dateEnd =  topicOfStudent.topicOfStudent.DateSt.AddMonths(topicOfStudent.topicOfStudent.Times).ToString("d");
                                <p>@dateEnd</p>
                            }
                        </td>
                        <td>

                            @topicOfStudent.topicOfStudent.Expense VNĐ

                        </td>
                        
                        <td>

                            @topicOfStudent.topicOfStudent.Progress

                        </td>

                    </tr>

                }



            </table>
        </div>

    </div>
</div>


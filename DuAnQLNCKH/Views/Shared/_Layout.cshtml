<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/chosen.min.css" rel="stylesheet" />
    <link href="~/Content/chosen.css" rel="stylesheet" />
    <link href="~/Content/css/tabcontrol.css" rel="stylesheet" />
    <link href="~/Content/css/sb-admin.min.css" rel="stylesheet" />

    <link href="~/Content/css/sb-admin12.css" rel="stylesheet" />

    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">



    <script src="~/assets/client/js/jquery-1.11.3.min.js"></script>
    <script src="~/assets/client/js/jquery-ui.js"></script>
    <script src="~/assets/client/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/tabcontrol.js"></script>



</head>
<body>


    <div class="logo-header">
        <span style="float:left">
            <a class="logo-header" href="#"><img height="150px" width="750px" src="~/images/logo.jpg" /></a>
        </span>
        <span style="float:right; margin:100px 70px 0 0">
            <i style="color:red; font-size:30px" class="fa fa-phone-volume" aria-hidden="true"></i>
            <span style="margin-left:10px; font-size:17px"> ĐƯỜNG DÂY NÓNG :</span><span style="color:red"> 0236.3707188</span>
        </span>
    </div>


    <!-- Topbar -->
    <nav class="navbar navbar-default hitec-navbar" style="margin-top: 70px; background: #6383e0; color: white; height: 60px; padding-bottom: 0px; margin-bottom: 0 ">

        <ul>
            <!-- Sidebar Toggle (Topbar) -->
            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                <i class="fa fa-bars"></i>
            </button>
            <a style="color:white" href="@Url.Action("Index", "Notification")">
            <li style="border-right: solid 1px white;  margin-left: 0px" itemprop="name" class="homebar">
                <i class="fas fa-home"></i>
                TRANG CHỦ


            </li>
            </a>
            <a style="color:white" href="https://drive.google.com/drive/folders/1CewXnB4UDHuJh4P8DLt_VYHtRibZh38s">
            <li style="border-right: solid 1px white;" class="homebar">

                <i class="fab fa-wpforms"></i>
                BIỂU MẪU

            </li>
            </a>
            <a style="color:white" href="@Url.Action("Index", "Report")">
            <li style="border-right: solid 1px white" itemprop="name" class="homebar">
                <i class="far fa-calendar-alt">
                </i>
                LỊCH BÁO CÁO
            </li>
            </a>


            @*<li class="homebar">
                    <a href="">
                        <i class="fas fa-table"></i>
                        BẢNG ĐIỂM
                    </a>
                </li>*@
            <a style="color:white" href="@Url.Action("Index", "Notification")">
            <li class="homebar">


                <i class="far fa-bell"></i>
                THÔNG BÁO


            </li>
            </a>

            <li class="homebar">
                @{
                    string session = Session["UserName"] as string;
                    string acess = Session["Acess"] as string;

                }
                @if (session.ToString().Equals("null"))
                {
                    <a class="fa fa-user" href="@Url.Action("Index", "Login")">ĐĂNG NHẬP</a>


                    //Html.ActionLink(session.ToString(), "Index", "Login");
                }
                @if (acess.ToString().Equals("0"))
                {
                    <a class="fa fa-user" href="@Url.Action("Index", "Login")">ĐĂNG XUẤT</a>
                }

            </li>
            <!-- Topbar Search -->
            <!-- Topbar Navbar -->

        </ul>
    </nav>
    <!-- End of Topbar -->
    <!-- Begin Page Content -->
    @{
        string access = Session["Acess"] as string;

    }
    @if (access.ToString().Equals("1"))
    {
        @Html.Partial("_LayoutLeft")
    }
    else if (access.ToString().Equals("2"))
    {
        @Html.Partial("_LayoutLecture")
    }
    else if (access.ToString().Equals("0"))
    {

    }
    else
    {
        @Html.Partial("LayoutGeneral")
    }
    <div style="width:800px; float:right; margin-right:290px;">
        @RenderBody()
    </div>

    @*    @RenderPage("layoutleft.cshtml")*@




    <script src="~/assets/admin/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/assets/client/js/move-top.js"></script>
    <script src="~/assets/client/js/jquery.easing.js"></script>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/themes/base/jquery-ui")

</body>
</html>

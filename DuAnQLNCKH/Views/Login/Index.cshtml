
@model DuAnQLNCKH.Models.Account

@{
    ViewBag.Title = "Login";
}
<link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">

<!-- Custom styles for this template-->


<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center" style="text-align:center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">ĐĂNG NHẬP VÀO TÀI KHOẢN</h1>
                                </div>
                                @using (Html.BeginForm("Login1", "Login", FormMethod.Post))
                                {

                                    <div class="form-group">
                                        Tên đăng nhập
                                        @Html.TextBoxFor(a => a.UserName, null, new { @class = "form-control form-control-user"})
                                    </div>
                                    <div class="form-group">
                                        Mật khẩu
                                        @Html.PasswordFor(a => a.PassWord, new {@class = "form-control form-control-user"})
                                    </div>
                                    <div class="form-group">
                                        <label>Quyền truy cập</label>
                                        @Html.DropDownList(
                                        "Access",
                                        new SelectList(
                                        new List<Object>
                                            {
                                            new { value = 0 , text = "Admin"  },
                                            new { value = 1 , text = "Nhân viên phòng QLNCKH" },
                                            new { value = 2 , text = "Giảng viên"}
                                            },
                                            "value",
                                            "text",
                                            "Access"
                                            )
                                            )

                  
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Đăng nhập
                                    </button>
                                   

                                }
                                <hr>

                            </div>
                                </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>

<!-- Bootstrap core JavaScript-->
<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>